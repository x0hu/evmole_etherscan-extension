{
  "manifest_version": 3,
  "name": "Evmole for Etherscan",
  "version": "1.0",
  "description": "Displays function selectors for Ethereum contracts on Etherscan",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://etherscan.io/address/*",
        "https://etherscan.io/token/*",
        "https://basescan.org/address/*",
        "https://basescan.org/token/*",
        "https://bscscan.com/address/*",
        "https://bscscan.com/token/*",
        "https://arbiscan.io/address/*",
        "https://arbiscan.io/token/*",
        "https://snowtrace.io/address/*",
        "https://snowtrace.io/token/*",
        "https://uniscan.xyz/address/*",
        "https://uniscan.xyz/token/*",
        "https://sonicscan.org/address/*",
        "https://sonicscan.org/token/*",
        "https://hyperevmscan.io/address/*",
        "https://hyperevmscan.io/token/*",
        "https://polygonscan.com/address/*",
        "https://polygonscan.com/token/*",
        "https://optimistic.etherscan.io/address/*",
        "https://optimistic.etherscan.io/token/*",
        "https://lineascan.build/address/*",
        "https://lineascan.build/token/*",
        "https://worldscan.org/address/*",
        "https://worldscan.org/token/*",
        "https://abscan.org/address/*",
        "https://abscan.org/token/*",
        "https://testnet.monadscan.com/address/*",
        "https://testnet.monadscan.com/token/*"
      ],
      "js": ["content.js", "etherscan_contract_info.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["evmole-script.js", "styles.css"],
      "matches": ["https://etherscan.io/*", "https://basescan.org/*", "https://bscscan.com/*", "https://arbiscan.io/*", "https://snowtrace.io/*", 
      "https://uniscan.xyz/*", "https://sonicscan.org/*", "https://polygonscan.com/*", "https://optimistic.etherscan.io/*", "https://lineascan.build/*",
      "https://worldscan.org/*", "https://abscan.org/*", "https://testnet.monadscan.com/*"]
    }
  ]
}